{
  "name": "@node-llm/core",
  "version": "1.9.0",
  "description": "An opinionated architectural layer for integrating Large Language Models in Node.js.",
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "examples/applications/*",
    "examples/applications/*/server"
  ],
  "scripts": {
    "test": "npm test --workspaces --if-present && npm run test:examples",
    "test:packages": "npm test --workspaces --if-present",
    "test:examples": "npm test --prefix examples/applications/hr-chatbot-rag && npm test --prefix examples/applications/brand-perception-checker/server",
    "build": "npm run build --workspaces --if-present",
    "docs": "cd docs && bundle install && bundle exec jekyll serve",
    "sync-models": "node scripts/sync-models.mjs",
    "vcr:record": "node scripts/vcr-record.mjs",
    "vcr:refresh": "node scripts/vcr-maintenance.mjs refresh",
    "vcr:verify": "node scripts/vcr-maintenance.mjs verify",
    "release:prepare": "node scripts/release-prepare.mjs",
    "demo": "cd examples/applications/brand-perception-checker && npm run setup && npm run dev",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "release": "semantic-release",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,mjs,json,md}": [
      "prettier --write"
    ],
    "*.{ts,js,mjs}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "llm",
    "large-language-models",
    "ai",
    "nodejs",
    "llm-integration",
    "architecture",
    "integration-layer",
    "provider-agnostic",
    "vendor-agnostic",
    "infrastructure",
    "openai",
    "anthropic",
    "gemini",
    "deepseek",
    "openrouter",
    "ollama",
    "chat",
    "streaming",
    "rag",
    "production"
  ],
  "author": "Shaiju Edakulangara",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/node-llm/node-llm"
  },
  "bugs": {
    "url": "https://github.com/node-llm/node-llm/issues"
  },
  "homepage": "https://node-llm.eshaiju.com",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "pnpm": {
    "overrides": {
      "undici": ">=6.23.0",
      "lodash": ">=4.17.23",
      "lodash-es": ">=4.17.23",
      "esbuild": ">=0.25.0"
    }
  }
}
