{
  "name": "@node-llm/testing",
  "version": "0.5.0",
  "description": "Deterministic testing for NodeLLM powered AI systems",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:docs": "vitest run test/docs",
    "test:record": "VCR_MODE=record vitest run",
    "test:vitest": "vitest run",
    "prepublishOnly": "npm run build && npm run test:docs"
  },
  "dependencies": {},
  "devDependencies": {
    "@node-llm/core": "workspace:*",
    "vitest": "^1.0.0",
    "typescript": "^5.0.0"
  }
}
