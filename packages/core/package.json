    "vendor-agnostic",
    "infrastructure",
    "openai",
    "anthropic",
    "gemini",
    "deepseek",
    "openrouter",
    "ollama",
    "chat",
    "streaming",
    "rag",
    "production"
  ],
  "author": "NodeLLM contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/node-llm/node-llm",
    "directory": "packages/core"
  },
  "homepage": "https://node-llm.eshaiju.com",
  "bugs": {
    "url": "https://github.com/node-llm/node-llm/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
