{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "types": ["node"],

    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,

    "declaration": true,
    "declarationMap": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true
  }
}
